---
import caseStudy2 from "../src/images/caseStudy2.png";


import { contentfulClient } from "../../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import type { Document } from "@contentful/rich-text-types";

import Slug from "../../pages/case-study/[slug].astro";

const props = Astro.props;
---


<section style="padding-top: 4%; background-color: #1a1a1a;">
   

    <div class="margins row">

        <div class="col-5 heading">
            <span  set:html={ props.midContentTitle}></span>
           
           <img src={props.midContentImg} alt=""> <br>
            <span class="caption"  set:html={props.midImgCaption}></span>
        </div>

        <div class="col-6 para" set:html={ props.midContentText}>
         
        </div>

    </div>
  
</section>

<style>

.margins {
    margin-left: 7%;
    margin-right: 7%;
  }


    .heading{
     font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 6.4vw;
    font-weight: 400;
    font-style: normal;
    line-height: 0.85;
    color: white;
    }

    .para{
        color: white;
    text-align: justify;
    
    font-family: 'anek devanagari';
    font-size: 1.2vw;
    margin-left: 3%;
    word-spacing: 0.6ch;
   
  
    }
    

    .para span{
        color:#e5ff53
    }
    .heading img{
        width: 70%;
        border-radius: 3vw 0 3vw 0;
        object-fit: cover;
        height: 13.3vw;
        margin-top: 3%;
        margin-bottom: 3%;
        border: 1.3px solid white;
    }

    .caption{
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 3vw;
    font-weight: 400;
    font-style: normal;
    line-height: 0.85;
    color: white;
    margin-top: 1%;
    }
  
   
</style>