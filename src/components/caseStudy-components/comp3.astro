---
import { contentfulClient } from "../../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import type { Document } from "@contentful/rich-text-types";

import { Image } from 'astro:assets';
//import { Image, Picture } from "@astrojs/image/components";

const props = Astro.props;
---

{
  Object.keys(props).length && (
    <section style="padding-top: 4%; background-color: #1a1a1a;">
      <div class="margins row">
        <div class="col-lg-5 col-md-5 col-sm-12 heading">
          <div class="animate-midcontent">
            <span set:html={props.midContentTitle} />
          </div>
          <div class="midcontent-img">
            {props.midContentImg &&
            <Image
              src={props.midContentImg}
               alt={"" + props.midContentImgAlt}
              loading="lazy"
              width={1200}
              height={700}
              class="optimization"
            />
          }
          </div>
          <div class="caption-animate">
            <span class="caption" set:html={props.midImgCaption} />
          </div>
        </div>

        <div
          class="col-lg-6 col-md-6 col-sm-12 para para-animate"
          set:html={props.midContentText}
        />
      </div>
    </section>
  )
}
<style>
  .optimization {
    height: auto;
  }
  .margins {
    margin-left: 7%;
    margin-right: 7%;
  }

  .heading {
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 6.4vw;
    font-weight: 400;
    font-style: normal;
    line-height: 0.85;
    color: white;
  }

  .para {
    color: white;
    text-align: justify;

    font-family: "anek devanagari";
    font-size: 1.2vw;
    margin-left: 3%;
    word-spacing: 0.6ch;
  }

  .para span {
    color: #e5ff53;
  }
  .heading img {
    width: 70%;
    border-radius: 3vw 0 3vw 0;
    object-fit: cover;
    height: 13.3vw;
    margin-top: 3%;
    margin-bottom: 3%;
    border: 1.3px solid white;
  }

  .caption {
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 3vw;
    font-weight: 400;
    font-style: normal;
    line-height: 0.85;
    color: white;
    margin-top: 1%;
  }

  @media screen and (max-width: 767px) {
    .heading {
      font-size: 12vw;
    }

    .para {
      font-size: 2.7vw;
      margin-left: 0 !important;
    }
    .heading img {
      width: 100%;
      height: auto;
      border-radius: 9vw 0 9vw 0;
    }
    .caption {
      font-size: 6vw !important;
    }
  }

  /* animation css */
  .animate-midcontent {
    position: relative;
  }
  .animate-midcontent:before {
    content: "";
    position: absolute;
    right: 0;
    left: 0;
    top: 0;
    bottom: 0;
    background: #1a1a1a;
    z-index: 998;
    transition: left 1s ease;
    overflow: hidden;
  }
  .animation-midcontent::before {
    left: 100%;
  }
  .midcontent-img {
    position: relative;
  }

  .midcontent-img::before {
    content: "";
    position: absolute;
    right: 0;
    left: 0;
    top: 0;
    bottom: 0;
    background: #1a1a1a;
    z-index: 998;
    transition: left 1s ease;

    overflow: hidden;
  }
  .midcontent-imgAnimation:before {
    left: 100%;
  }

  .para-animate {
    position: relative;
  }
  .para-animate::before {
    content: "";
    position: absolute;
    right: 0;
    left: 0;
    top: 0;
    bottom: 0;
    background: #1a1a1a;
    z-index: 998;
    transition: top 1s ease;
    overflow: hidden;
  }
  .para-animation::before {
    top: 90%;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import Eases from "gsap";
  gsap.registerPlugin(ScrollTrigger);

  let tl = gsap.timeline();
  tl.from(".animate-midcontent", {
    scrollTrigger: {
      trigger: ".animate-midcontent",
      start: "top 50%",
      end: "bottom 10%",
      toggleClass: "animation-midcontent",
      scrub: true,
    },
  })
    .from(".midcontent-img", {
      scrollTrigger: {
        trigger: ".midcontent-img",
        start: "top 50%",
        end: "bottom 10%",
        toggleClass: "midcontent-imgAnimation",
        scrub: true,
      },
    })
    .from(".caption-animate", {
      opacity: 0,
      x: "-50%",
      ease: "Power1.easeOut",
      scrollTrigger: {
        trigger: ".caption-animate",
        start: "top 70%",
        end: "bottom 60%",
        scrub: true,
      },
    })
    .from(".para-animate", {
      delay: 2,

      scrollTrigger: {
        trigger: ".para-animate",
        start: "top 40%",
        end: "bottom 32%",
        toggleClass: "para-animation",
        scrub: true,
      },
    });
</script>
