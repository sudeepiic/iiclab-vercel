---
import yellowDiamond from "../../images/yellowDiamond.png";
import { contentfulClient } from "../../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import type { Document } from "@contentful/rich-text-types";


const props = Astro.props;

---


<section style="padding-top: 4%; background-color: #1a1a1a;">

  
    <div class="margins row" >

        <div class="col-lg-5 col-md-5 col-sm-12 heading" >
            <img src={yellowDiamond} alt="" loading="lazy" style="width: 7%;">
            <span style="display: inline-block;" set:html={props.tiltImagesTitle}></span>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-12 para" set:html={ props.tiltImagesText}>
           
            
        </div>
      

    </div>

    <div class="margins images" style="margin-top: 4%; text-align: center;">
        <!-- <div class="img1-animate"> -->
            <img class="img1 " src={props.tiltImage1}  alt="" loading="lazy">
        <!-- </div> -->
          
            <img class="img2 img2-animate" src={props.tiltImage2} alt="" loading="lazy">

          
            <img class="img3 img3-animate" src={props.tiltImage3} alt="" loading="lazy">
        


        

    </div>
   
</section>

<style>
 
.margins {
    margin-left: 7%;
    margin-right: 7%;
  }


  .heading{
     font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 6.8vw;
    font-weight: 400;
    font-style: normal;
    line-height: 0.85;
    color: white;
    
    }

 
    .para{
        color: white;
    text-align: justify;
    margin-left: 3%;
    font-family: 'anek devanagari';
    font-size: 1.2vw;
    word-spacing: 0.6ch;
   
  
    }

    .para u, .para span{
        color:#e5ff53
        text-decoration: underline
    }

    .images img{
        border: 2px solid white;
    }
    .img1{
        width: 30%;
        border-radius: 7vw 0 0 0;
        rotate: 354deg;
    }
    .img2{
        width: 30%;
        border-radius:0 0 7vw  0;
        rotate: 10deg;
        margin-top: 5%;
       
    }
    .img3{
        width: 27%;
        border-radius: 0 7vw 0 0;
        rotate: 350deg;
       
    }

    @media screen and (max-width: 767px) {
    .heading {
      font-size: 12vw;
    }
    .para {
        font-size: 2.7vw;
        margin-left: 0 !important;
    }
    .heading img{
        width: 5% 
        !important;
    }
  }

  .img2-animate, .img1-animate{
    display: inline-block;

  }

  .img1-animate{
    position: relative;
  }
  .img1-animate::before{
    content: "";
    position: absolute;
    right: 0;
    left: 0;
    top: 0;
    bottom: 0;
    background: #1a1a1a;
    z-index: 234555;
    transition: top 1s ease;
    overflow: hidden;
  }
  .img-animation::before{
    top:100%;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import Eases from "gsap";
  gsap.registerPlugin(ScrollTrigger);

  let tl = gsap.timeline();
  tl.from(".img2-animate", {
    x:"50%",
    rotate:"80",
    opacity:0,
    scrollTrigger: {
      trigger: ".img2-animate",
      start: "top 80%",
      end: "bottom 70%",

      scrub: true,
    
 
    },
  })
  .from(".img1-animate", {
  
    scrollTrigger: {
      trigger: ".img1-animate",
      start: "top 80%",
      end: "bottom 70%",
      toggleClass:"img-animation",
      scrub: true,
    },
  });
</script>