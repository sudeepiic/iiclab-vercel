---
import yellowDiamond from "../../images/yellowDiamond.png";
import { contentfulClient } from "../../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import type { Document } from "@contentful/rich-text-types";
//import { Image, Picture } from "@astrojs/image/components";

const props = Astro.props;
---

{
  Object.keys(props).length && (
    <section style="padding-top: 4%; background-color: #1a1a1a;">
      <div class="margins row sectionAnimate">
        <div class="col-lg-5 col-md-5 col-sm-12 heading">
          <img
            src={yellowDiamond}
            loading="lazy"
            class=" "
            style="width: 7%;"
          />
          <span
            style="display: inline-block;"
            set:html={props.tiltImagesTitle}
          />
        </div>

        <div
          class="col-lg-6 col-md-6 col-sm-12 para"
          set:html={props.tiltImagesText}
        />
      </div>

      <div class="margins images" style="margin-top: 4%; text-align: center;">
        <img src={props.tiltImage1} class="img1 img-animate  " alt="" />

        <img src={props.tiltImage2} class="img2 img2-animate  " alt="" />

        <img src={props.tiltImage3} class="img3 img-animate  " alt="" />
      </div>
    </section>
  )
}

<style>
  . {
    height: auto;
  }

  .margins {
    margin-left: 7%;
    margin-right: 7%;
  }

  .heading {
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 6.8vw;
    font-weight: 400;
    font-style: normal;
    line-height: 0.85;
    color: white;
  }

  .para {
    color: white;
    text-align: justify;
    margin-left: 3%;
    font-family: "anek devanagari";
    font-size: 1.2vw;
    word-spacing: 0.6ch;
  }

  .para u,
  .para span {
    color: #e5ff53;
    text-decoration: underline;
  }

  .images img {
    border: 2px solid white;
    aspect-ratio: 313/360;
    object-fit: fill;
  }
  .img1 {
    width: 30%;
    border-radius: 7vw 0 0 0;
    rotate: 354deg;
  }
  .img2 {
    width: 30%;
    border-radius: 0 0 7vw 0;
    rotate: 10deg;
    margin-top: 5%;
  }
  .img3 {
    width: 27%;
    border-radius: 0 7vw 0 0;
    rotate: 350deg;
  }

  @media screen and (max-width: 767px) {
    .heading {
      font-size: 12vw;
    }
    .para {
      font-size: 2.7vw;
      margin-left: 0 !important;
    }
    .heading img {
      width: 5% !important;
    }
  }

  .img2-animate,
  .img1-animate {
    display: inline-block;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import Eases from "gsap";
  gsap.registerPlugin(ScrollTrigger);

  let tl = gsap.timeline();
  tl.from(".sectionAnimate", {
    opacity: 0,
    scrollTrigger: {
      trigger: ".sectionAnimate",
      start: "top 50%",
      end: "bottom 40%",

      scrub: true,
    },
  })
    .from(".img-animate", {
      opacity: 0,

      scrollTrigger: {
        trigger: ".img-animate",
        start: "top 90%",
        end: "bottom 80%",
        scrub: true,
      },
    })
    .from(".img2-animate", {
      x: "50%",
      rotate: "80",
      opacity: 0,
      scrollTrigger: {
        trigger: ".img2-animate",
        start: "top 80%",
        end: "bottom 70%",

        scrub: true,
      },
    });
</script>
