---
const props = Astro.props;
//import { Image, Picture } from "@astrojs/image/components";
console.log(props, "missing imageeeeee");
import { Image } from "astro:assets";
---

{
  Object.keys(props).length && props.blogTitle && (
    <section class="bgColor">
      <div
        class="margins headline-animate"
        style="text-align: center; padding-top: 5%;"
      >
        <div class="blogHeadline" set:html={props.blogTitle} />
      </div>
      <div
        class="margins author-animate"
        style="margin-top: 1.4%; margin-bottom: 3.5%; text-align: center;"
      >
        <div class="border-box">
          <span set:html={props.genre} />
        </div>
        <span class="authorName" set:html={props.author} />
        <span class="dot" />
        <span class="readTime" set:html={props.readTime} />
      </div>
      {props.heroImage && (
        <div class="image-animate">
          <Image
            src={props.heroImage}
            alt={props.heroImageAlt}
            class="optimization resizeImage"
            width={1552}
            height={720}
            style="width: 100%;"
          />
        </div>
      )}
    </section>
  )
}
<style>
  .optimization {
    height: auto;
  }
  .margins {
    margin-left: 7%;
    margin-right: 7%;
  }

  .blogHeadline {
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 7vw;
    font-weight: 400;
    font-style: normal;
    color: white;
    line-height: 0.85;
  }
  .resizeImage {
    aspect-ratio: 1020/475;
    object-fit: cover;
  }

  .border-box {
    background-color: #e5ff53;
    text-align: center;
    padding: 0.15vw;
    width: 8vw;
    border-radius: 1.5px;
    display: inline-block;
    vertical-align: middle;
    line-height: 1.65;
  }

  .border-box span {
    font-family: "anek devanagari";
    font-size: 0.77vw;

    font-weight: 550;

    vertical-align: middle;
  }

  .authorName {
    font-family: "anek devanagari";
    font-size: 0.8vw;

    font-weight: 400;
    color: white;
    margin-left: 1.4%;
    display: inline-block;
  }
  .dot {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: white;
    display: inline-block;
    margin-bottom: 0.2%;
    margin-left: 0.4%;
  }
  .readTime {
    font-family: "anek devanagari";
    font-size: 0.8vw;

    font-weight: 400;
    color: white;
    display: inline-block;
    margin-left: 0.4%;
    opacity: 50%;
  }

  .bgColor {
    background: linear-gradient(#1a1a1a 60%, #f6f7f0 40%);
    padding-top: 9vh;
  }
  @media screen and (max-width: 767px) {
    .blogHeadline {
      font-size: 11vw;
    }
    .border-box {
      width: 20vw;
    }
    .border-box span,
    .authorName,
    .readTime {
      font-size: 2vw;
    }
    .bgColor {
      background: linear-gradient(#1a1a1a 75%, #f6f7f0 25%);
    }
  }

  /* animation css */

  .headline-animate {
    overflow: hidden;
  }
  .headline-animate span {
    display: block;
  }

  .image-animate {
    position: relative;
    padding: 0 7%;
  }
  .image-animate::before {
    content: "";
    position: absolute;
    right: 0;
    left: 0;
    top: 0;
    bottom: 0;
    background: #1a1a1a;
    z-index: 998;
    transition: left 1.2s ease;
    transition-delay: 2s;
    overflow: hidden;
  }
  .image-animation::before {
    left: 100% !important;
  }
</style>

<style is:global>
  .logoWhite {
    display: block !important;
  }
  .logoBlack {
    display: none;
  }
  .blogHeadline,
  .blogHeadline * {
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 7vw;
    font-weight: 400;
    font-style: normal;
    color: white;
    line-height: 0.85;
    margin: 0;
  }

  @media screen and (max-width: 767px) {
    .blogHeadline,
    .blogHeadline * {
      font-size: 11vw;
    }
  }
  .turnBlack {
    background: transparent;
    position: fixed !important;
    width: 100%;
    margin-bottom: 1%;
  }

  .list ul li a {
    color: white;
    opacity: 50%;
  }
  path {
    fill: white;
  }

  .connect,
  .circles {
    fill: #1a1a1a;
  }
  .oval {
    fill: white;
  }

  .tele {
    fill: white;
  }
  .menu p {
    color: white;
  }
  .menu .s1,
  .menu .s2 {
    border: 1px solid white;
  }
</style>

<script>
  document.querySelector(".image-animate").classList.add("image-animation");

  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import Eases from "gsap";
  gsap.registerPlugin(ScrollTrigger);

  let tl = gsap.timeline();
  tl.from(".blogHeadline", {
    duration: 1.2,
    y: "100%",
    ease: "power1.out",
  }).from(".author-animate", {
    opacity: 0,
  });
</script>
