---
import logo from "../images/logo.png";
import blackCircle from "../images/blackcircle.png";
import whiteCircle from "../images/whitecircle.png";
import calllogo from "../images/calllogo.png";
---

<header>
  <div class="d margins">
    <nav class="main d-inline-flex">
      <div class="logo">
        <a href="">
          <img src={logo} alt="" />
        </a>
      </div>
      <div class="list">
        <ul class="d-inline-flex">
          <li><a class="navTabs" href="">Our Work</a></li>
          <li><a class="navTabs" href="">Solutions</a></li>
          <li><a class="navTabs" href="">Life at IIC</a></li>
          <li><a class="navTabs" href="">Career</a></li>
          <li><a class="navTabs" href="">Articles</a></li>
        </ul>
      </div>
      <div class="contact-div">
        <div class="div1">
          <div class="div2"><img src={blackCircle} alt="" /></div>
          <div class="div3"><img src={whiteCircle} alt="" /></div>
          <div class="div4"><img src={calllogo} alt="" /></div>
          <p>Connect</p>
        </div>
      </div>
      <div class="menu d-flex">
        <p>menu</p>
        <span class="s1"></span>
        <span class="s2"></span>
      </div>
    </nav>
  </div>
</header>

<style>
  .margins {
    margin-left: 7%;
    margin-right: 7%;
  }
  :root {
    --mainfont-font-family: "Anek Devanagari";
    --maincolor-color: #1a1a1a;
  }

  .main {
    height: 60px;
    width: 100%;
    margin-top: 30px;
    /* border:1px solid black; */
  }
  .main .logo {
    margin-top: 10px;
  }
  .main img {
    height: 40px;
  }
  .main ul {
    list-style: none;
  }
  .list {
  }
  .list ul li {
    padding: 17px;
  }
  .list ul li a {
    text-decoration: none;
    font-family: var(--mainfont-font-family);
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    text-transform: capitalize;
    color: #061b28;
  }
  .navTabs {
    opacity: 50%;
  }

  @media screen and (max-width: 992px) {
    .list ul li {
      padding-right: 0%;
      padding-left: 0%;
      margin-right: 4% !important;
    }
    .main ul {
      width: 1.5rem !important;
    }
  }

  .contact-div {
    position: relative;
    /* border: 1px solid black; */
    margin-left: auto;
  }
  .contact-div .div1 {
    position: relative;
    border: 1px solid black;
    background-color: var(--maincolor-color);
    height: 52px;
    width: 151px;
    border-radius: 31px;
    margin-right: 30px;
  }
  .contact-div .div2 {
    position: absolute;
    margin-top: 11px;
    margin-left: 25px;
  }
  .contact-div .div2 img {
    height: 30px;
    width: 30px;
  }
  .contact-div .div3 {
    position: absolute;
    margin-left: 29.5px;
    margin-top: 12px;
  }
  .contact-div .div3 img {
    height: 22px;
    width: 22px;
  }
  .contact-div .div4 {
    position: absolute;
    margin-top: 12px;
    margin-left: 36px;
  }
  .contact-div .div4 img {
    width: 10px;
    height: 10px;
  }
  .contact-div p {
    color: #ffffff;
    margin-left: 65px;
    margin-top: 14px;
    font-family: var(--mainfont-font-family);
    font-style: normal;
  }

  .menu {
    /* margin-left: 180px; */
  }
  .menu p {
    margin-top: 15px;
    font-weight: 400;
    font-family: var(--mainfont-font-family);
    text-transform: capitalize;
  }
  .menu .s1 {
    border: 1px solid black;
    transform: rotate(90deg);
    height: 25px;
    margin-left: 20px;
    margin-top: 10px;
  }
  .menu .s2 {
    border: 1px solid black;
    transform: rotate(90deg);
    height: 40px;
    margin-top: 10px;
    margin-left: 6px;
  }
</style>
