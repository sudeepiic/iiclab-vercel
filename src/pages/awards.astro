  }
  .trial2 {
    position: absolute;
    object-fit: cover;
    transform: translateX(-50%) translateY(-50%);
    top: 50%;
    left: 50%;
    z-index: -10;
    opacity: 0;
    visibily: hidden;
    pointer-events: none;
  }

  /*  */
  .title {
    font-family: "Deutschlander";
    font-size: 14.5vw;
    text-transform: uppercase;
    line-height: 0.8;
  }

  .titleImg {
    vertical-align: baseline;
    width: 28%;

