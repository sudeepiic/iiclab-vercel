<style is:global>
  .turnBlack {
    background: transparent !important; ;
    position: fixed !important;
    width: 100%;
    margin-bottom: 1%;

  }

  .list ul li a {
    color: white !important;
    opacity: 50%;
  }
  path {
    fill: white !important;
  }

  .connect,
  .circles {
    fill: #1a1a1a !important;
  }
  .oval {
    fill: white !important;
  }

  .tele {
    fill: white !important;
  }
  .menu p {
    color: white !important;
  }
  .menu .s1,
  .menu .s2 {
    border: 1px solid white !important;
  }
</style>

<script>
  document.querySelector(".imgDiv").classList.add("imgDiv-animation");

  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import Eases from "gsap";
  gsap.registerPlugin(ScrollTrigger);

  let tl = gsap.timeline();

  let mm = gsap.matchMedia();

  mm.add("(min-width: 768px)", () => {
    tl.from(".title1", {
      duration: 1,
      x: "-100%",

      ease: "power1.out",
    })
      .from(".title2", {
        duration: 1,
        x: "-100%",

        ease: "power1.out",
      })
      .from(".text", {
        duration: 1,
        y: "100%",
        ease: "power1.out",
      })
      .from(".input-group, .textArea, .submitBtn", 1, {
        y: "50%",
        opacity: 0,
      })
      .from(".col1, .col2", 1, {
        y: "50%",
        opacity: 0,
        stagger: 0.5,

        scrollTrigger: {
          trigger: ".col1, .col2",
          start: "top 50%",
          end: "bottom 30%",
          scrub: true,
        },
      })

      .from(".clan", 1, {
        y: "100%",

        scrollTrigger: {
          trigger: ".clan",
          start: "top 85%",
          end: "bottom 60%",

          scrub: true,
        },
      })
      .from(".hand-animate", 1, {
        opacity: 0,

        scrollTrigger: {
          trigger: ".hand-animate",
          start: "top 40%",
          end: "bottom 90%",

          scrub: true,
        },
      })

      .from(".hand-animate", 1, {
        x: "+=30",
        rotate: "-=10",
        yoyo: true,
        repeat: 10,
        scrollTrigger: {
          trigger: ".hand-animate",
          start: "top 55%",
          end: "bottom 50%",

          scrub: true,
        },
      })
      .from(".btn-animate", 1, {
        x: "-20%",
        opacity: 0,

        scrollTrigger: {
          trigger: ".hand-animate",
          start: "top 55%",
          end: "bottom 75%",

          scrub: true,
        },
      });
  });

  mm.add("(max-width: 767px)", () => {
    tl.from(".contact-animate", {
      duration: 1,
      x: "-100%",

      ease: "power1.out",
    })

      .from(".text", {
        duration: 1,
        y: "100%",
        ease: "power1.out",
      })
      .from(".input-group, .textArea, .submitBtn", 1, {
        y: "50%",
        opacity: 0,
      })
      .from("#connect span", {
        y: "50%",
        opacity: 0,
      })
      .from(".col1, .col2", 1, {
        y: "50%",
        opacity: 0,
        stagger: 0.5,

        scrollTrigger: {
          trigger: ".col1, .col2",
          start: "top 50%",
          end: "bottom 30%",
          scrub: true,
        },
      })

      .from(".clan", 1, {
        y: "100%",

        scrollTrigger: {
          trigger: ".clan",
          start: "top 70%",
          end: "bottom 60%",

          scrub: true,
        },
      })
      .from(".hand-animate", 1, {
        opacity: 0,

        scrollTrigger: {
          trigger: ".hand-animate",
          start: "top 55%",
          end: "bottom 90%",

          scrub: true,
        },
      })

      .from(".hand-animate", 1, {
        x: "+=30",
        rotate: "-=10",
        yoyo: true,
        repeat: 10,
        scrollTrigger: {
          trigger: ".hand-animate",
          start: "top 50%",
          end: "bottom 50%",

          scrub: true,
        },
      })
      .from(".btn-animate", 1, {
        x: "-20%",
        opacity: 0,

        scrollTrigger: {
          trigger: ".hand-animate",
          start: "top 50%",
          end: "bottom 60%",

          scrub: true,
        },
      });
  });
</script>
