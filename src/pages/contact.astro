---
import Layout from "../layouts/Layout.astro";
import officeImg from "../images/officeImg.png";
import submitArrow from "../images/submitArrow.png";
import contactHand from "../images/contactHand.png";
import positionBtn from "../images/positionBtn.png";
import { Image } from 'astro:assets';
//import { Image, Picture } from "@astrojs/image/components";
---

<Layout title="Contact Us" seoTitle="contact-us">
  <section class="topSec">
    <div class="row topSecDiv">
      <div class="col-lg-5 col-md-5 col-sm-12 imgText">
        <div class="contact-animate">
          <span class="title title1"> Ready for a</span>

          <span class="title title2">Head Start?</span>
        </div>
        <div class="text-animate">
          <span class="text"
            >We can help you with all your questions except, how much calories
            does Mario burn in a day.</span
          >
        </div>
      </div>
      <div class="col-lg-7 col-md-7 col-sm-12 imgDiv">
        <Image class="heroImg optimization" src={officeImg} alt="" />
      </div>
    </div>

    <form action="" class="margins" id="connect">
      <span class="mobTitles">Your Name :</span>
      <div class="input-group mb-3 input-group-lg">
        <div class="input-group-prepend" style="margin-bottom:  1.5%;">
          <span class="inp-title input-group-text">Your Name :</span>
        </div>
        <input
          type="text"
          style="margin-bottom:  1.5%; "
         
          class="input form-control"
          id="name2"
          name="name2"
          required
        />
      </div>

      <span class="mobTitles">Your Email :</span>

      <div style="margin-bottom: 3%;" class="input-group mb-3 input-group-lg">
        <div class="input-group-prepend" style="margin-bottom: 1.5%;">
          <span class="inp-title input-group-text">Your Email :</span>
        </div>
        <input
          type="text"
          style="margin-bottom:  1.5%; "
         
          class="input form-control"
          id="email2"
          name="email2"
          required
        />
      </div>
      <span class="mobTitles">Message :</span>

      <textarea
        class="textArea"
        rows="7"
        cols="50"
        id="message"
        name="message"
        required
      >
        Message : &nbsp;
      </textarea>
      <button
        class="submitBtn btn"
        type="submit"
        id="submitBtn"
        aria-label="submit"
      >
        <Image src={submitArrow} class="optimization" loading="lazy" alt="" />
        submit
      </button>
    </form>
  </section>

  <section style="margin-top: 3%; margin-bottom: 3%;">
    <div class="row table margins">
      <div class="col-lg-2 col-md-2 col-sm-12 col1">ADDRESS</div>
      <div class="col-lg-10 col-md-10 col-sm-12 col2">
        Lotus corporate park, E 802, Western Express Hwy, Geetanjali Railway
        Colony, Laxmi Nagar, Goregaon, Mumbai, Maharashtra 400063
      </div>
    </div>

    <div class="row table margins">
      <div class="col-lg-2 col-md-2 col-sm-12 col1">CONTACT</div>
      <div class="col-lg-10 col-md-10 col-sm-12 col2 d-flex justifyEnd">
        <div
          class="innerDivs"
          style="border-right: 1.2px solid rgb(202, 199, 199)"
        >
          <a
            href="mailto:mumbai@inkincaps.com"
            aria-label="mail"  style="padding-left: 0 !important;"
            target="_blank"><span>mumbai@inkincaps.com</span></a
          >
        </div>

        <div style="padding-left: 1.5%;">
          <a href="tel:+91-83032 29629" aria-label="phone">
            <span>+91-83032 29629</span>
          </a>
        </div>
      </div>
    </div>

    <div class="row table margins">
      <div class="col-lg-2 col-md-2 col-sm-12 col1">TIMING</div>
      <div class="col-lg-10 col-md-10 col-sm-12 col2">
        Mon-Sat : 10:30 - 19:30 IST
      </div>
    </div>

    <div class="row table margins" style="border-bottom: 0;">
      <div class="col-lg-2 col-md-2 col-sm-12 col1">SOCIAL</div>
      <div class="col-lg-10 col-md-10 col-sm-12 col2 d-flex justifyEnd">
        <div class="innerDivs">
          <a
            href="https://in.linkedin.com/company/ink-in-caps"
            target="_blank"
            style="padding-left: 0 !important;"
            aria-label="linkedin"><span>LinkedIn</span></a
          >
        </div>
        <div class="innerDivs">
          <a
            href="https://www.instagram.com/inkincaps/?hl=en"
            target="_blank"
            aria-label="instagram"><span>Instagram</span></a
          >
        </div>

        <div class="innerDivs">
          <a
            href="https://www.youtube.com/@InkInCaps"
            aria-label="youtube"
            target="_blank"><span>Youtube</span></a
          >
        </div>

        <div class="innerDivs">
          <a
            href="https://twitter.com/inkincaps?lang=en"
            aria-label="twitter"
            target="_blank"><span>Twitter</span></a
          >
        </div>

        <div style="padding-left: 1.5%;">
          <a
            href="https://www.facebook.com/inkincaps/"
            aria-label="facebook"
            target="_blank"><span>Facebook</span></a
          >
        </div>
      </div>
    </div>
  </section>

  <section class="bottomSec">
    <div class="joinClan row">
      <div class="col-8">
        <div class="clanDiv">
          <span class="clan">want to</span>
        </div>
        <div class="clanDiv">
          <span class="clan"> join our clan?</span>
        </div>
        <a class="btn-animate" href="/hiring"
          ><Image class="btn posBtn optimization" src={positionBtn} alt="" /></a
        >
      </div>
      <div class="col-4 hand-animate">
        <Image
          style="width: 80%;"
          src={contactHand}
          class="optimization"
          loading="lazy"
          alt=""
        />
      </div>
    </div>
  </section>
</Layout>

<script>
  import swal from "sweetalert";
  document
    .getElementById("connect")
    .addEventListener("submit", function (event) {
      event.preventDefault();

      var formData = new FormData(event.target as HTMLFormElement);

      var name = formData.get("name2");
      var email = formData.get("email2");
      var message = formData.get("message");

      const connectFormData = `
    <style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    #customers td,
    #customers th {
        border: 1px solid #ddd;
        padding: 8px;
    }

    #customers tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    #customers tr:hover {
        background-color: #ddd;
    }

    #customers th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #04AA6D;
        color: white;
    }
</style>

<body>
    <table id="customers">

        <tr>
            <td style="font-weight:bold;">Name</td>
            <td >${name}</td>
        </tr>
        <tr>
          <td style="font-weight:bold;">Email</td>
          <td >${email}</td>
        </tr>
        <tr>
      <td style="font-weight:bold;">Message</td>
      <td >${message}</td>
      </tr>
    </table>
</body>
    `;

      const formData2 = new FormData();
      formData2.append("type", "contact-us");
      formData2.append("body", connectFormData);

      fetch("https://iiclab-backend.vtour.tech/mail", {
        method: "POST",
        body: formData2,
        redirect: "follow",
      })
        .then(function (response) {
          if (response.ok) {
            return response.text();
          }
          throw new Error("ERROR:" + response.status);
        })
        .then(function (data) {
          console.log(data);
          swal({
            title: "Thank You!",
            icon: "success",
            // text: "Thank you for showing interest, We will get back to you shortly.",
          });
        })
        .catch(function (error) {
          console.error("error:", error);
        });
      (event.target as HTMLFormElement).reset();
    });
</script>

