              <a href="" aria-label="immersive technology">
                <img class="" src={yellowGo} alt="" loading="lazy" /></a
              >
            </div>
            <div class="captionDiv">
              <span class="captionIndex">01</span>
              <span class="captionTitle">&nbsp; Immersive Technology</span>
            </div>
          </div>
        </div>

        <div class="swiper-slide">
          <div class="swiperDiv">
            <img
              class="carousalImg"
              src={interactiveSoln}
              alt=""
              loading="lazy"
            />
            <div class="techList">
              <ul class="a">
                <li>Interactive Wall/Screen</li>
                <li>Interactive Table/Interactive Book</li>
                <li>Engagement Experts</li>
                <li>Object Recognition Table</li>
              </ul>
            </div>
            <div class="overlapDiv interactive">
              <span class="overlapTitle">Interactive Solution</span>
              <div class="mobTechlist">
                <ul class="a">
                  <li>Interactive Wall/Screen</li>
                  <li>Interactive Table/Interactive Book</li>
                  <li>Engagement Experts</li>
                  <li>Object Recognition Table</li>
                  <img
                    class="knowMoreBtn"
                    src={knowMoreBtn}
                    alt=""
                    loading="lazy"
                  />
                </ul>
              </div>
              <a href="" aria-label="interactive solution">
                <img src={yellowGo} class="" alt="" loading="lazy" /></a
              >
            </div>
            <div class="captionDiv">
              <span class="captionIndex">02</span>
              <span class="captionTitle"> &nbsp;Interactive Solution</span>
            </div>
          </div>
        </div>

        <div class="swiper-slide">
          <div class="swiperDiv">
            <img class="carousalImg" src={mobileWeb} alt="" loading="lazy" />
            <div class="techList">
              <ul class="a">
                <li>Web Development</li>
                <li>App Development</li>
                <li>Gaming Solutions</li>
              </ul>
            </div>
            <div class="overlapDiv mobweb">
              <span class="overlapTitle">Mobile & Web</span>
              <div class="mobTechlist">
                <ul class="a">
                  <li>Web Development</li>
                  <li>App Development</li>
                  <li>Gaming Solutions</li>
                  <img
                    class="knowMoreBtn"
                    src={knowMoreBtn}
                    alt=""
                    loading="lazy"
                  />
                </ul>
              </div>
              <a href="" aria-label="mobile and web">
                <img src={yellowGo} class="" alt="" loading="lazy" /></a
              >
            </div>
            <div class="captionDiv">
              <span class="captionIndex">03</span>
              <span class="captionTitle"> &nbsp; Mobile & Web</span>
            </div>
          </div>
        </div>
        <div class="swiper-slide">
          <div class="swiperDiv">
            <img class="carousalImg" src={solutionImg1} alt="" loading="lazy" />
            <div class="techList">
              <ul class="a">
                <li>3D/2D Animations</li>
                <li>Motion Graphics</li>
                <li>Architectural Visualization</li>
                <li>Expainer Videos</li>
              </ul>
            </div>
            <div class="overlapDiv content">
              <span class="overlapTitle">Content Development</span>
              <div class="mobTechlist">
                <ul class="a">
                  <li>3D/2D Animations</li>
                  <li>Motion Graphics</li>
                  <li>Architectural Visualization</li>
                  <li>Expainer Videos</li>
                  <img
                    class="knowMoreBtn"
                    src={knowMoreBtn}
                    alt=""
                    loading="lazy"
                  />
                </ul>
              </div>
              <a href="" aria-label="content development">
                <img src={yellowGo} class="" alt="" loading="lazy" /></a
              >
            </div>
            <div class="captionDiv">
              <span class="captionIndex">04</span>
              <span class="captionTitle">&nbsp; Content Development</span>
            </div>
          </div>
        </div>

        <div class="swiper-slide">
          <div class="swiperDiv">
            <img class="carousalImg" src={experimental} alt="" loading="lazy" />
            <div class="techList">
              <ul class="a">
                <li>Motion Gesture</li>
                <li>Interactive Campaign</li>
                <li>Photobooth</li>
                <li>Kiosk/Vending Machine</li>
              </ul>
            </div>
            <div class="overlapDiv">
              <span class="overlapTitle">Experiential Marketing</span>
              <div class="mobTechlist">
                <ul class="a">
                  <li>Motion Gesture</li>
                  <li>Interactive Campaign</li>
                  <li>Photobooth</li>
                  <li>Kiosk/Vending Machine</li>
                  <img
                    class="knowMoreBtn"
                    src={knowMoreBtn}
                    alt=""
                    loading="lazy"
                  />
                </ul>
              </div>
              <a href="" aria-label="experiential marketing">
                <img src={yellowGo} class="" alt="" loading="lazy" /></a
              >
            </div>
            <div class="captionDiv">
              <span class="captionIndex">05</span>
              <span class="captionTitle">&nbsp; Experiential Marketing</span>
            </div>
          </div>
        </div>

        <div class="swiper-slide">
          <div class="swiperDiv">
            <img class="carousalImg" src={strategy} alt="" loading="lazy" />
            <div class="techList">
              <ul class="a">
                <li>Scenario Mapping Brand Audits</li>
                <li>Brand Identity</li>
                <li>Competitor Mapping</li>
                <li>Graphic Design & Prototype</li>
              </ul>
            </div>
            <div class="overlapDiv strategy">
              <span class="overlapTitle">Strategy & Design</span>
              <div class="mobTechlist">
                <ul class="a">
                  <li>Scenario Mapping Brand Audits</li>
                  <li>Brand Identity</li>
                  <li>Competitor Mapping</li>
                  <li>Graphic Design & Prototype</li>
                  <img class="knowMoreBtn" src={knowMoreBtn} loading="lazy" />
                </ul>
              </div>

              <a href="" aria-label="strategy and design">
                <img src={yellowGo} class="" /></a
              >
            </div>
            <div class="captionDiv">
              <span class="captionIndex">06</span>
              <span class="captionTitle">&nbsp; strategy & design</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="movingTextSec">
    <div style="overflow-x: hidden;">
      <div class="moving-text" style="display: flex; width:max-content;  ">
        <span class="wallHonor">metaverse</span>
        <div style="text-align: center; margin:3vw 3vw 3vw 3vw">
          <img
            style="width:3.5vw"
            class=""
            src={diamond}
            alt=""
            loading="lazy"
          />
        </div>

        <span class="wallHonor">ui/ux Design</span>
        <div style="text-align: center; margin:3vw 3vw 3vw 3vw">
          <img style="width:3.5vw" class="" src={diamond} loading="lazy" />
        </div>

        <span class="wallHonor">Augmented Reality</span>
        <div style="text-align: center; margin:3vw 3vw 3vw 3vw">
          <img style="width:3.5vw" class="" src={diamond} loading="lazy" />
        </div>
        <span class="wallHonor">XR</span>
        <div style="text-align: center; margin:3vw 3vw 3vw 3vw">
          <img style="width:3.5vw" class="" src={diamond} loading="lazy" />
        </div>
        <span class="wallHonor">Interactive Technology</span>
        <div style="text-align: center; margin:3vw 3vw 3vw 3vw">
          <img style="width:3.5vw" class="" src={diamond} loading="lazy" />
        </div>
        <span class="wallHonor">Experiential Marketing</span>
        <div style="text-align: center; margin:3vw 3vw 3vw 3vw">
          <img style="width:3.5vw" class="" src={diamond} loading="lazy" />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  . {
    height: auto;
  }
  .btnDiv {
    position: relative;
  }
  .arrow {
    position: absolute;
    left: 78.5%;
    width: 3.5%;
    top: 42.5%;
  }
  /* carousal css */
  ul.a {
    list-style-type: disc;
    color: white;
    font-family: "anek devanagari";
    line-height: 1.7;
  }

  .carousalImg {
    width: 20%;
  }

  .overlapDiv {
    position: absolute;
    top: 37%;
    left: -5%;
    display: none;
  }
  .overlapDiv img {
    width: 17%;
  }
  .overlapTitle {
    color: white;
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 6.8vw;
    font-weight: 400;
    font-style: normal;
    line-height: 1.2;
    display: block;
    word-spacing: 0.25rem;
  }
  .captionDiv {
    display: none;
  }
  .captionIndex,
  .captionTitle {
    color: white;
    font-family: "Deutschlander";
    text-transform: capitalize;
    font-size: 4.5vw;
    font-weight: 400;
    word-spacing: 0.25rem;
  }

  .captionIndex {
    opacity: 60%;
  }

  .techList {
    width: 50%;
    position: absolute;
    left: 84%;
    bottom: -6%;
    font-size: 1vw;
    text-align: initial;
    display: none;
    text-transform: capitalize;
  }
  .mobTechlist {
    display: none;
  }

  /*  */

  /* swiper css */
  .swiper {
    width: 100%;
    padding-bottom: 5%;
  }
  .swiperDiv {
    position: relative;
    text-align: center;
  }

  .swiper-slide {
    text-align: center;
    /* font-size: 18px; */
    /* background: #f6f7f0; */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide .carousalImg {
    display: block;
    width: 90%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 4/5;
  }
  .swiper-slide-active .overlapDiv,
  .swiper-slide-active .techList {
    display: block;
  }

  .swiper-slide-active .carousalImg {
    scale: 0.8;
  }
  .swiper-slide-next .captionDiv,
  .swiper-slide-prev .captionDiv {
    display: block;
  }
  .swiper-slide-next .carousalImg,
  .swiper-slide-prev .carousalImg {
    aspect-ratio: 3/2;
    /* transform: translateY(50%); */
  }

  .swiper-slide-next .swiperDiv,
  .swiper-slide-prev .swiperDiv {
    transform: translateY(45%) !important;
  }
  .swiper-slide-next,
  .swiper-slide-prev {
    scale: 0.5;
  }

  @media screen and (min-width: 768px) {
    .interactive {
      left: 0%;
    }
    .mobweb {
      left: 18%;
    }
    .content {
      left: 0%;
    }
    .strategy {
      left: 7%;
    }
  }

  @media screen and (max-width: 767px) {
    .swiper {
      padding-bottom: 38%;
      padding-top: 7%;
    }
    .swiper-slide-active .carousalImg {
      scale: 1.1;
    }

    .captionDiv,
    .techList {
      display: none !important;
    }
    .mobTechlist {
      display: block;
      text-align: initial;
      font-size: 2.2vw;
      width: 90%;
      text-transform: capitalize;
      margin-top: 3%;
      margin-left: 4%;
    }
    .overlapDiv {
      position: absolute;
      top: 98%;
      left: -20%;
      display: none;
      width: 130%;
    }
    .overlapDiv a {
      display: none;
    }
    .overlapTitle {
      font-size: 10.8vw;
      line-height: 0.8;
    }
    .knowMoreBtn {
      width: 45% !important;
      padding-top: 4%;
    }
    .swiper-slide-next .carousalImg,
    .swiper-slide-prev .carousalImg {
      aspect-ratio: 1;
      /* transform: translateY(50%); */
    }
    .swiper-slide-next,
    .swiper-slide-prev {
      scale: 0.95;
    }
    .swiper-slide-next .swiperDiv,
    .swiper-slide-prev .swiperDiv {
      transform: translateY(25%) !important;
    }

    .btnDiv,
    .btn-animate,
    .arrow {
      display: none;
    }
    .animate-title {
      margin-bottom: 3%;
    }
  }

  .bgImage {
    background-image: url(../images/Hand_Holding_Smartphone2.jpg);

    background-size: cover;

    object-fit: cover;
    padding-left: 10%;
    padding-top: 33%;
  }

  .title {
    color: white;
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 13vw;
    font-weight: 400;
    font-style: normal;
    line-height: 0.85;
    overflow: hidden;
    width: 90%;
    margin-top: 6%;
  }
  .animate-title {
    display: inline-block;
  }
  .btn-animate {
    width: 13%;
    margin-bottom: 3%;
    margin-left: 20%;
    display: inline-block;
  }

  /* moving text css */

  .moving-text {
    animation: move-text 30s linear infinite;
    overflow: hidden;
  }

  .wallHonor {
    font-family: "Deutschlander";
    font-size: 13vw;
    text-transform: uppercase;
    line-height: 11vw;
    font-size: 14vw;
    color: white;
  }
  @keyframes move-text {
    0% {
      transform: translateX(32%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .movingTextSec {
    padding-top: 2.5%;
    padding-bottom: 2%;
    background-color: #1a1a1a;
  }
  /* animation css */

  .swiper-animate {
    position: relative;
  }
  .swiper-animate:before {
    content: "";
    position: absolute;
    right: 0;
    left: 0;
    top: 0;
    bottom: 0;
    background: #1a1a1a;
    z-index: 998;
    transition: bottom 1.4s ease;
    overflow: hidden;
  }
  .swiper-animation::before {
    bottom: 100%;
  }
</style>

<style is:global>
  .turnBlack {
    background: transparent;
    position: absolute;
    width: 100%;
  }

  .list ul li a {
    color: white;
    opacity: 100%;
  }
  path {
    fill: white;
  }

  /* connect button css */

  .connect,
  .circles {
    fill: #1a1a1a;
  }
  .oval {
    fill: white;
  }

  .tele {
    fill: white;
  }
  .menu p {
    color: white;
  }
  .menu .s1,
  .menu .s2 {
    border: 1px solid white;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import Eases from "gsap";
  gsap.registerPlugin(ScrollTrigger);

  import {
    Swiper,
    Navigation,
    Pagination,
    EffectCoverflow,
    Autoplay,
    EffectCreative,
  } from "swiper";
  let x = 3;
  var swiper = new Swiper(".mySwiper", {
    modules: [Navigation, EffectCreative],

    grabCursor: true,
    centeredSlides: true,
    slidesPerView: 3,
    spaceBetween: 30,
    loop: true,

    autoplay: {
      delay: 3000,
    },
    breakpoints: {
      767: {
        slidesPerView: 3,
        spaceBetween: 30,
      },
      250: {
        slidesPerView: 2,
        spaceBetween: 50,
      },
    },
  });

  let tl = gsap.timeline();
  tl.from(".animate-title", {
    duration: 0.7,
    y: "60%",

    ease: "power1.out",
  })
    .from(".btn-animate, .arrow", {
      opacity: 0,

      ease: "power1.out",
    })
    .from(".btn-animate", {
      rotate: "360",
      duration: 10,
      repeat: -1,
      ease: "none",
    })
    .from(".swiper-animate", {
      scrollTrigger: {
        trigger: ".swiper-animate",
        start: "top 35%",
        end: "bottom 20%",
        toggleClass: "swiper-animation",
        scrub: true,
      },
    })
    .from(".overlapDiv", {
      y: "50%",
      opacity: 0,
      scrollTrigger: {
        trigger: ".overlapDiv",
        start: "top 55%",
        end: "bottom 60%",

        scrub: true,
      },
    })
    .from(".captionDiv", {
      opacity: 0,
      scrollTrigger: {
        trigger: ".overlapDiv",
        start: "top 55%",
        end: "bottom 60%",

        scrub: true,
      },
    })
    .from(".techList", {
      opacity: 0,
      scrollTrigger: {
        trigger: ".overlapDiv",
        start: "top 44%",
        end: "bottom 60%",

        scrub: true,
      },
    });
</script>
