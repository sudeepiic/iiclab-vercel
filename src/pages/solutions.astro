<style>
  /* carousal css */
  ul.a {
    list-style-type: disc;
    color: white;
    font-family: "anek devanagari";
    line-height: 1.7;
  }

  .carousalImg {
    width: 20%;
  }

  .overlapDiv {
    position: absolute;
    top: 37%;
    left: -5%;
    display: none;
  }
  .overlapDiv img {
    width: 17%;
  }
  .overlapTitle {
    color: white;
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 6.8vw;
    font-weight: 400;
    font-style: normal;
    line-height: 1.2;
    display: block;
  }
  .captionDiv {
    display: none;
  }
  .captionIndex,
  .captionTitle {
    color: white;
    font-family: "Deutschlander";
    text-transform: capitalize;
    font-size: 4.5vw;
    font-weight: 400;
  }

  .captionIndex {
    opacity: 60%;
  }

  .techList {
    width: 50%;
    position: absolute;
    left: 84%;
    bottom: -6%;
    font-size: 1vw;
    text-align: initial;
    display: none;
  }
  .mobTechlist {
    display: none;
  }

  /*  */

  /* swiper css */
  .swiper {
    width: 100%;
    padding-bottom: 5%;
  }
  .swiperDiv {
    position: relative;
    text-align: center;
  }

  .swiper-slide {
    text-align: center;
    /* font-size: 18px; */
    /* background: #f6f7f0; */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide .carousalImg {
    display: block;
    width: 90%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 4/5;
  }
  .swiper-slide-active .overlapDiv,
  .swiper-slide-active .techList {
    display: block;
  }

  .swiper-slide-active .carousalImg {
    scale: 0.8;
  }
  .swiper-slide-next .captionDiv,
  .swiper-slide-prev .captionDiv {
    display: block;
  }
  .swiper-slide-next .carousalImg,
  .swiper-slide-prev .carousalImg {
    aspect-ratio: 3/2;
    /* transform: translateY(50%); */
  }

  .swiper-slide-next .swiperDiv,
  .swiper-slide-prev .swiperDiv {
    transform: translateY(45%) !important;
  }
  .swiper-slide-next,
  .swiper-slide-prev {
    scale: 0.5;
  }

  @media screen and (max-width: 767px) {
    .swiper {
      padding-bottom: 38%;
      padding-top: 7%;
    }
    .swiper-slide-active .carousalImg {
      scale: 1.1;
    }

    .captionDiv,
    .techList {
      display: none !important;
    }
    .mobTechlist {
      display: block;
      text-align: initial;
      font-size: 2.2vw;
      width: 90%;
      text-transform: capitalize;
      margin-top: 3%;
      margin-left: 4%;
    }
    .overlapDiv {
      position: absolute;
      top: 98%;
      left: -20%;
      display: none;
      width: 130%;
    }
    .overlapDiv a {
      display: none;
    }
    .overlapTitle {
      font-size: 10.8vw;
      line-height: 0.8;
    }
    .knowMoreBtn {
      width: 45% !important;
      padding-top: 4%;
    }
    .swiper-slide-next .carousalImg,
    .swiper-slide-prev .carousalImg {
      aspect-ratio: 1;
      /* transform: translateY(50%); */
    }
    .swiper-slide-next,
    .swiper-slide-prev {
      scale: 0.95;
    }
    .swiper-slide-next .swiperDiv,
    .swiper-slide-prev .swiperDiv {
      transform: translateY(25%) !important;
    }
  }

  .bgImage {
    background-image: url(../images/Hand_Holding_Smartphone2.jpg);

    background-size: cover;

    object-fit: cover;
    padding-left: 10%;
    padding-top: 33%;
  }

  .title {
    color: white;
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 13vw;
    font-weight: 400;
    font-style: normal;
    line-height: 0.85;

    width: 90%;
    margin-top: 9%;
  }

  /* moving text css */

  .moving-text {
    animation: move-text 15s linear infinite;
    overflow: hidden;
  }

  .wallHonor {
    font-family: "Deutschlander";
    font-size: 13vw;
    text-transform: uppercase;
    line-height: 11vw;
    font-size: 14vw;
    color: white;
  }
  @keyframes move-text {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-90%);
    }
  }

  .movingTextSec {
    padding-top: 2.5%;
    padding-bottom: 2%;
    background-color: #1a1a1a;
  }
  /*  */
</style>

<style is:global>
  .turnBlack {
    background: transparent;
    position: absolute;
    width: 100%;
  }

  .list ul li a {
    color: white;
    opacity: 100%;
  }
  path {
