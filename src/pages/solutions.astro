---
import Layout from "../layouts/Layout.astro";
import Hand_Holding_Smartphone2 from "../images/Hand_Holding_Smartphone2.jpg";
import ourSolutionsBtn from "../images/ourSolutionsBtn.png";
import solutionbtn from "../images/solution-rotateBtn.png";
import newArrow from "../images/newArrow.png";
import solutionImg1 from "../images/solutionImg1.png";
import experimental from "../images/experiment.png";
import interactiveSoln from "../images/interactiveSoln.png";
import mobileWeb from "../images/mobileWeb.png";
import strategy from "../images/strategy.png";
import yellowGo from "../images/yellowGo2.png";
import knowMoreBtn from "../images/knowMoreBtn.png";
import diamond from "../images/whiteDiamond.png";
//import { Image, Picture } from "@astrojs/image/components";
---

<Layout title="Solutions" seoTitle="solutions">
  <section>
    <div class="gradient">
      <div class="bgImage">
        <div class="title">
          <span class="animate-title">What are we good at</span>
          <a class="btnDiv" href="#soln" aria-label="know more">
            <img class="btn btn-animate" src={solutionbtn} alt="" />
            <img class="arrow" src={newArrow} alt="" />
