    width: 26%;
  }

  .topText{
    margin-top: 6%;
    padding-top: 6%;
  }
  .topText span{
    font-family: 'anek devanagari';
    opacity: 50%;
    color: white;
    font-size: 2.3vw;
    
    

  }


  .editors{
    margin-top: 4%;
  }

  .editors span{
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 10vw;
    font-weight: 400;
    font-style: normal;
    color: white;
    line-height: 0.85;
  }

  .editorImgs{
    width: 100%;
    margin-left: -9%;
    margin-bottom: 3%;
  }

  .imgText{
    font-family: "Deutschlander";
    text-transform: uppercase;
    font-size: 4vw;
    font-weight: 400;
    font-style: normal;
    color: white;
