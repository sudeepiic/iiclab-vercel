---
import Layout from "../layouts/Layout.astro";
import blogButton from "../images/blogButton.png";
import editorImg1 from "../images/editorImg1.png";
import editorImg2 from "../images/editorImg2.png";
import exploreimg1 from "../images/exploreimg1.png";

import { contentfulClient } from "../lib/contentful";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import type { Document } from "@contentful/rich-text-types";
import yellowGo from "../images/yellowGo.png";
import { log } from "astro/dist/core/logger/core";

const entries = await contentfulClient.getEntries<any>({
  content_type: "blogs",
});

// const { blogsData } = Astro.props;
---

<Layout title="Ink In Caps - Blog Gallery">
  <section
    style="background-color: #1a1a1a; border-radius: 0 0 6vw 6vw; padding-bottom: 4%; padding-top: 9vh;"
  >
    <div class="row margins mobView">
      <div class="col-lg-6 col-md-6 col-sm-12 heading">
        <span>thinking out loud</span>
        <img class="btn blogbtn" src={blogButton} alt="" />
      </div>

      <div class="col-lg-6 col-md-6 col-sm-12 topText">
        <span
          >Newly minted Articles that you can read if you are not abducted by
          the Aliens</span
        >
      </div>
    </div>

    <div style="text-align: center;padding:10% 0 10% 0;">
      <h2 style="color:white">Carousel Coming Sooon!</h2>
      <!-- <p style="color:white">ruko zara sabar karo</p> -->
    </div>

    <div class="editors margins">
      <span>editor's pick</span>
    </div>

    <div style="margin-top: 1%;" class="margins row">
      <div class="col-md-6 col-lg-6 col-sm-12 picks">
        <img class="editorImgs" src={editorImg1} alt="" /><br />
        <span class="imgText"
          >How Are People Coping With Mind Blocking In The Current Situation?</span
        >

        <a
          href="/blogs/how-are-people-coping-with-mind-blocking-in-the-current-situation"
        >
          <img class="btn goBtn" src={yellowGo} alt="" /></a
        >
        <div class="info">
          <div class="border-box"><span>Design & Technology</span></div>
          <span class="authorName">By Pallavi.Jain</span>
          <span class="dot"></span>
          <span class="readTime">5 min read</span>
        </div>
      </div>
      <div class="col-md-6 col-lg-6 col-sm-12 picks">
        <img class="editorImgs" src={editorImg2} alt="" />
        <br />
        <span class="imgText">The cycle of Analysis Paralysis</span>
        <a href="/blogs/the-cycle-of-analysis-paralysis">
          <img class="btn goBtn" src={yellowGo} alt="" />
        </a>
        <div class="info">
          <div class="border-box"><span>Design & Technology</span></div>
          <span class="authorName">By Pallavi.Jain</span>
          <span class="dot"></span>
          <span class="readTime">5 min read</span>
        </div>
      </div>
    </div>
  </section>
  <section style="margin-top: 4%; margin-bottom: 4%;">
    <div class="margins row">
      <div class="col-lg-5 col-md-5 col-sm-12">
        <div class="titleDiv">
          <span class="whiteHeading">Explore</span>

          <span class="whiteHeading">more</span>
        </div>

        <div class="exploreBtns">
          <div class="makeInline">
            <button class="btn exploreBtn" style="margin-left: 0;">All</button>
            <button class="btn exploreBtn">Design</button>
            <button class="btn exploreBtn">Technology</button>
          </div>

          <button class="btn exploreBtn" style="margin-left: 0;"
            >Marketing</button
          >
          <button class="btn exploreBtn">Virtuality</button>
        </div>
      </div>

      <div
        style="scroll-behavior: smooth; overflow:scroll;  height: 70vh;"
        class="col-lg-6 col-md-6 col-sm-12"
      >
        {
          entries.items.map((blogs) => (
            <a href={"/blogs/" + blogs.fields.params}>
              <div class="row list">
                <div class="col-9">
                  <span class="listGenre" set:html={blogs.fields.genreNew} />
                  <br />
                  <span
                    class="listText"
                    set:html={documentToHtmlString(blogs.fields.blogTitle)}
                  />
                </div>

                <div class="col-3">
                  <img
                    style="width:90%"
                    class="blogImg"
                    src={blogs.fields?.heroImage?.fields?.file.url}
                    alt=""
                  />
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <style>
    @media screen and (max-width: 768px) {
      .blogbtn {
        display: none !important;
      }
      .topText {
        margin-top: 0 !important;
        padding-top: 2% !important;
      }
      .topText span {
        font-size: 3.2vw !important;
        line-height: 1.7 !important;
      }
      .mobView {
        margin-top: 5%;
      }
      .heading span,
      .editors span {
        font-size: 15vw !important;
      }
      .info {
        margin-top: 1% !important;
      }
      .imgText {
        font-size: 7.5vw !important;
      }
      .editorImgs {
        margin-bottom: 0 !important;
      }

      .border-box {
        background-color: #e5ff53;
        text-align: center;
        padding: 0.8vw !important;
        width: 20vw !important;
        border-radius: 1.5px;
        display: inline-block;
        vertical-align: middle;
        line-height: 1.65;
      }
      .border-box span {
        font-family: "anek devanagari";
        font-size: 2vw !important;

        font-weight: 500;

        vertical-align: middle;
      }

      .authorName {
        font-family: "anek devanagari";
        font-size: 2vw !important;

        font-weight: 400;
        color: white;
        margin-left: 1%;
      }
      .dot {
        width: 4px;
        height: 4px;
        border-radius: 50%;
        background-color: white;
        display: inline-block;
        margin-bottom: 0.2%;
      }
      .readTime {
        font-family: "anek devanagari";
        font-size: 2vw !important
        ;

        font-weight: 400;
        color: white;

        opacity: 50%;
      }
      .picks {
        margin-bottom: 7%;
      }
      .titleDiv {
        width: 100%;
        margin-top: 3%;
      }
      .titleDiv span {
        font-size: 15vw;
      }
      .makeInline {
        display: inline;
      }
      .exploreBtn {
        width: 16% !important;
        font-size: 2vw !important;
      }
      .listText {
        font-size: 3.3vw !important;
      }
      .listGenre {
        font-size: 2.3vw !important;
      }
      .blogImg {
        width: 110% !important;
        margin-right: 3%;
      }
    }

    .titleDiv {
      width: 60%;
    }
    .exploreBtns {
      margin-top: 3%;
      margin-bottom: 3%;
    }
    .info {
      margin-top: 3.4%;
    }
    a {
      text-decoration: none;
    }
    .heading {
      margin-top: 4%;
    }
    .heading span {
      font-family: "Deutschlander";
      text-transform: uppercase;
      font-size: 13vw;
      font-weight: 400;
      font-style: normal;
      color: white;
      line-height: 0.85;
      /* padding-top: 2%; */
    }

    .margins {
      margin-left: 7%;
      margin-right: 7%;
    }

    .blogbtn {
      vertical-align: top !important;
      width: 26%;
    }

    .topText {
      margin-top: 6%;
      padding-top: 6%;
    }
    .topText span {
      font-family: "anek devanagari";
      opacity: 50%;
      color: white;
      font-size: 2.3vw;
    }

    .editors {
      margin-top: 4%;
    }

    .editors span {
      font-family: "Deutschlander";
      text-transform: uppercase;
      font-size: 10vw;
      font-weight: 400;
      font-style: normal;
      color: white;
      line-height: 0.85;
    }

    .editorImgs {
      width: 100%;
      margin-left: -9%;
      margin-bottom: 3%;
    }

    .imgText {
      font-family: "Deutschlander";
      text-transform: uppercase;
      font-size: 4vw;
      font-weight: 400;
      font-style: normal;
      color: white;
      line-height: 0.85;
    }

    .goBtn {
      width: 14%;
      vertical-align: top;
    }

    .border-box {
      background-color: #e5ff53;
      text-align: center;
      padding: 0.18vw;
      width: 8vw;
      border-radius: 1.5px;
      display: inline-block;
      vertical-align: middle;
      line-height: 1.65;
    }
    .border-box span {
      font-family: "anek devanagari";
      font-size: 0.7vw;

      font-weight: 500;

      vertical-align: middle;
    }

    .authorName {
      font-family: "anek devanagari";
      font-size: 0.7vw;

      font-weight: 400;
      color: white;
      margin-left: 1%;
    }
    .dot {
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background-color: white;
      display: inline-block;
      margin-bottom: 0.2%;
    }
    .readTime {
      font-family: "anek devanagari";
      font-size: 0.7vw;

      font-weight: 400;
      color: white;

      opacity: 50%;
    }

    .whiteHeading {
      font-family: "Deutschlander";
      text-transform: uppercase;
      font-size: 10vw;
      font-weight: 400;
      font-style: normal;
      /* color: white; */
      line-height: 0.85;
    }

    .exploreBtn {
      background-color: #f6f7f0;
      color: black;
      font-weight: 500;
      font-size: 1vw;
      border-radius: 30px;
      width: 20%;
      /* height:35px; */
      border: 1.15px solid rgb(182, 181, 181);
      font-family: "anek devanagari";
      margin: 1.35%;
      padding: 2%;
    }

    .exploreBtn.clicked {
      background-color: black;
      color: white;
    }

    .list {
      padding-bottom: 2%;
      padding-top: 2%;
      border-bottom: 1.45px solid rgb(204, 202, 202);
    }

    .listGenre {
      font-size: 0.85vw;
      opacity: 50%;
      font-family: "anek devanagari";
      font-weight: 500;

      text-transform: uppercase;
    }

    .listText {
      width: 75%;
      font-family: "anek devanagari";
      font-weight: 600;
      font-size: 1.2vw;
      text-transform: capitalize;
    }

    .blogImg {
      object-fit: cover;
      aspect-ratio: 3/2;
      border-radius: 0 0.8vw 0 0.8vw;
    }
  </style>

  <style is:global>
    .turnBlack {
      background: transparent;
      position: absolute;
      width: 100%;
    }

    .list ul li a {
      color: white;
      opacity: 50%;
    }
    path {
      fill: white;
    }

    .connect,
    .circles {
      fill: #1a1a1a;
    }
    .oval {
      fill: white;
    }

    .tele {
      fill: white;
    }
    .menu p {
      color: white;
    }
    .menu .s1,
    .menu .s2 {
      border: 1px solid white;
    }
  </style>

  <script>
    const myButton = document.querySelectorAll(".exploreBtn");

    for (let i = 0; i < myButton.length; i++) {
      myButton[i].addEventListener("click", function () {
        if (myButton[i].classList.contains("clicked")) {
          myButton[i].classList.remove("clicked");
        } else {
          myButton[i].classList.add("clicked");
        }
      });
    }
  </script>
</Layout>
