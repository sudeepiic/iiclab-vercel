  <script>
    import {
      Swiper,
      Navigation,
      Pagination,
      EffectCoverflow,
      Autoplay,
      EffectCreative,
    } from "swiper";
    let x = 3;
    var swiper = new Swiper(".mySwiper", {
      modules: [Navigation, Autoplay, EffectCreative],
      effect: "creative",
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: 3,
      spaceBetween: 20,
      loop: true,
      navigation: {
        nextEl: ".swiper-next",
        prevEl: ".swiper-prev",
      },
      creativeEffect: {
        prev: {
          // will set `translateZ(-400px)` on previous slides
          rotate: [0, 0, -12],
          translate: ["-105%", "15%", 0],
          scale: 0.85,
        },
        next: {
          // will set `translateX(100%)` on next slides
          rotate: [0, 0, -12],
          translate: ["105%", "-6%", 0],
          scale: 0.85,
        },
      },

      autoplay: {
        delay: 2000,
      },

      // pagination: {
