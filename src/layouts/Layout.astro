---
import "../styles/global.css";
import "../components/Header.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export interface Props {
  title: string;
  seoTitle: string;
}
const siteMetadata: any = await Astro.glob("../metadata.json");

const { title, seoTitle } = Astro.props;
console.log(seoTitle, "THE");
---

<!doctype html>
<html lang="en">
  <slot name="head" />
  <head>
    <!--  -->

    <!--  -->
    <meta charset="UTF-8" />
    <meta
      http-equiv="Content-Security-Policy"
      content="'unsafe-inline'; img-src https://*; child-src 'none';"
    />

    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#f6f7f0" />
    <link
      rel="stylesheet"
      href="https://collab-staging.core.vretail.space/style.css"
    />
    <meta
      name="description"
      content={(siteMetadata[0]?.seo[seoTitle] || siteMetadata[0]?.seo?.default)
        .description}
    />
    {
      siteMetadata[0]?.seo[seoTitle]?.image && (
        <meta
          property="og-image"
          content={siteMetadata[0]?.seo[seoTitle]?.image}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogUrl && (
        <meta
          property="og-url"
          content={siteMetadata[0]?.seo[seoTitle]?.ogUrl}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogUrl && (
        <meta
          property="og-type"
          content={siteMetadata[0]?.seo[seoTitle]?.ogType}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogTitle && (
        <meta
          property="og-title"
          content={siteMetadata[0]?.seo[seoTitle]?.ogTitle}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.keywords && (
        <meta
          name="keywords"
          content={siteMetadata[0]?.seo[seoTitle]?.keywords}
        />
      )
    }

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Anek+Devanagari:wght@100;200;300;400;500&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"
    />

    <!-- stylesheets -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <!--  -->

    <!-- gsap cdn -->
  </head><div
    id="vretail-app"
    data-vretail-project-id="PR-MH800GfdsK4CeHpGYw4goEhpv"
  >
  </div>
  <script src="https://collab-staging.core.vretail.space/vretail-collab.umd.js"
  ></script>
  <!-- jquery -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script
    src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"
  ></script>
  <!--  -->
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>

  <body>
    <Header />
    <slot />

    <Footer />
  </body>

  <script>
    const header = document.querySelector(".sticky-header");
    let lastScrollY = 0;

    window.addEventListener("scroll", () => {
      const currentScrollY = window.scrollY;

      if (currentScrollY > lastScrollY) {
        header.classList.add("hidden");
      } else {
        header.classList.remove("hidden");
      }

      lastScrollY = currentScrollY;
    });
  </script>


</html>
