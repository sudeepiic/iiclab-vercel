---
import "../styles/global.css";
import "../components/Header.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  seoTitle: string;
  description: string;
  schema?:any;
}
const siteMetadata: any = await Astro.glob("../metadata.json");

const { title, seoTitle, description,schema } = Astro.props;
---

<!doctype html>
<html lang="en">
  <slot name="head" />
  <head>
    <!--  -->

    <!--  -->
    <link rel="sitemap" href="/sitemap.xml" />

     <link rel="preload" href="/assets/Pacifico-Bold.woff2" as="font" type="font/woff2" crossorigin>

    <!-- Google Tag Manager -->
    <script type="text/partytown"  src="https://www.googletagmanager.com/gtag/js?id=G-SRFEBYSZRP?no_partytown=1 "
    ></script>
    <script type="text/partytown">
      //@ts-ignore
      window.dataLayer = window.dataLayer || [];
      //@ts-ignore
      function gtag() {
        //@ts-ignore
        dataLayer.push(arguments);
