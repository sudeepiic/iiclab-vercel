    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#f6f7f0" />

    <meta
      name="description"
      content={(siteMetadata[0]?.seo[seoTitle] &&
        siteMetadata[0]?.seo[seoTitle].description) ||
        description ||
        siteMetadata[0]?.seo?.default.description}
    />
    {
      siteMetadata[0]?.seo[seoTitle]?.image && (
        <meta
          property="og-image"
          content={siteMetadata[0]?.seo[seoTitle]?.image}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogUrl && (
        <meta
          property="og-url"
          content={siteMetadata[0]?.seo[seoTitle]?.ogUrl}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogUrl && (
        <meta
          property="og-type"
          content={siteMetadata[0]?.seo[seoTitle]?.ogType}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogTitle && (
        <meta
          property="og-title"
          content={siteMetadata[0]?.seo[seoTitle]?.ogTitle}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.keywords && (
        <meta
          name="keywords"
          content={siteMetadata[0]?.seo[seoTitle]?.keywords}
        />
      )
    }

    <link rel="canonical" href={"https://iiclab.com" + Astro.url.pathname} />

    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link
      href="https://fonts.googleapis.com/css2?family=Anek+Devanagari:wght@100;200;300;400;500&display=swap"
      rel="stylesheet"
    />
    <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

    <!-- stylesheets -->
