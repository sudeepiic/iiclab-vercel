      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-NCBRF88V"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
  </body>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const header = document.querySelector(".sticky-header");
    let lastScrollY = 0;

    window.addEventListener("scroll", () => {
      const currentScrollY = window.scrollY;

      if (currentScrollY > lastScrollY) {
        header.classList.add("hidden");
      } else {
        header.classList.remove("hidden");
      }

      lastScrollY = currentScrollY;
    });
  </script>
<link rel="preload"       href="https://collab-staging.core.vretail.space/style.css"
 as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet"       href="https://collab-staging.core.vretail.space/style.css"
></noscript>
    
     
