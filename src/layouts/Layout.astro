---
import "../styles/global.css";
import "../components/Header.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export interface Props {
  title: string;
  seoTitle: string;
}
const siteMetadata: any = await Astro.glob("../metadata.json");

const { title, seoTitle } = Astro.props;
console.log(seoTitle, "THE");
---

<!DOCTYPE html>
<html lang="en">
  <slot name="head" />
  <head>
    <!--  -->

    <!--  -->
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#f6f7f0" />

    <meta
      name="description"
      content={(siteMetadata[0]?.seo[seoTitle] || siteMetadata[0]?.seo?.default)
        .description}
    />
    {
      siteMetadata[0]?.seo[seoTitle]?.image && (
        <meta
          property="og-image"
          content={siteMetadata[0]?.seo[seoTitle]?.image}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogUrl && (
        <meta
          property="og-url"
          content={siteMetadata[0]?.seo[seoTitle]?.ogUrl}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogUrl && (
        <meta
          property="og-type"
          content={siteMetadata[0]?.seo[seoTitle]?.ogType}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.ogTitle && (
        <meta
          property="og-title"
          content={siteMetadata[0]?.seo[seoTitle]?.ogTitle}
        />
      )
    }
    {
      siteMetadata[0]?.seo[seoTitle]?.keywords && (
        <meta
          name="keywords"
          content={siteMetadata[0]?.seo[seoTitle]?.keywords}
        />
      )
    }

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Anek+Devanagari:wght@100;200;300;400;500&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"
    />

    <!-- stylesheets -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <!--  -->

    <!-- gsap cdn -->

    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <!--  -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <Header />
    <slot />

    <Footer />
  </body>
</html>
